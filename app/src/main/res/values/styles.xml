<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="medicineNameStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/medicineNameColor</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="HospitalStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/HospitalNameColor</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="HospitalHeaderStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/HospitalHeaderColor</item>
        <item name="android:typeface">normal</item>
    </style>

        <style name="indicationStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/medicineNameColor</item>
        <item name="android:typeface">normal</item>
    </style>


    <style name="MedicineInfoCategory" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/medicineNameColor</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="MedicineInfoText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/medicineTextColor</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="CalculationSpinnerText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/medicineTextColor</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="HomeButton">

        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@drawable/blurred_corner</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="PhoneNameHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/medicineNameColor</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="PhoneNameDetail" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/PhoneDetai</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="DosageHeaderStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/DosageHeader</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="CalculationItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>

        <item name="android:textColor">@color/CalculationColor</item>
        <item name="android:typeface">normal</item>
    </style>
</resources>
